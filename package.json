    "@pinia/nuxt": "^0.9.0",
    "@prisma/client": "^6.4.1",
    "@prisma/extension-pulse": "^1.2.2",
    "@prisma/nuxt": "^0.3.0",
    "@radix-icons/vue": "^1.0.0",
    "@tanstack/vue-table": "^8.21.2",
    "@vite-pwa/nuxt": "^0.10.6",
    "@vueuse/core": "^12.7.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "ejs": "^3.1.10",
    "eslint": "^9.21.0",
    "joi": "^17.13.3",
    "js-cookie": "^3.0.5",
    "lucide-vue-next": "^0.474.0",
    "nodemailer": "^6.10.0",
